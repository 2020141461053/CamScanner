<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.Affair"
        tools:context=".ui.Affair"
        android:background="#F5F5F5">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="affair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/affair_id"
                android:textSize="35sp"
                android:fontFamily="@font/title"
                android:textColor="#000000"
                android:background="#FFFFFF"
        />
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
        />
        <TextView
                android:text="描述"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc_"
                android:textSize="15sp"
                android:fontFamily="@font/kaiti"
                android:textColor="#000000"
                android:paddingBottom="30dp"
                android:paddingTop="15dp"
        />
        <Button
                android:text="选择文件"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/select"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/file_show"
                android:background="@drawable/text_view_bg">
            <TextView
                    android:text="文件名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/file_name"
                    android:textSize="15sp"
                    android:fontFamily="@font/kaiti"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_weight="0.75"
            />
            <Button
                    android:text="删除文件"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete"
                    android:textSize="15sp"
                    android:padding="2dp"
                    android:textColor="#000000"
                    android:layout_weight="0.2"
                    android:onClick="delete"/>
        </LinearLayout>
        <!--用组件完成进度条-->
        <Button
                android:text="上传"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/uoload"
                android:textColor="#000000"
                android:onClick="upLoad"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>