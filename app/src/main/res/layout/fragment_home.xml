<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment"
        android:fitsSystemWindows="true"
        android:background="#F5F5F5"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

    >
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/scrollView2">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

            >
                <!--TextView
                        android:text="@string/tx1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/cap1"
                        android:theme="@style/subTitle_font_size"
                        android:fontFamily="@font/kaiti"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                />
                <androidx.gridlayout.widget.GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/sub1"
                        app:columnCount="4" >
                </androidx.gridlayout.widget.GridLayout -->

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                >
                    <ImageView
                            android:src="@drawable/title"
                            android:layout_width="121dp"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView"
                            android:layout_weight="1"/>
                    <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/title"
                            android:textSize="25sp"
                            android:fontFamily="@font/title"
                            android:textColor="#000000"
                            android:layout_weight="0.75"

                    />
                </LinearLayout>
                <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                />
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/MyCardViewStyle"
                >
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="@string/tx2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/cap2"
                                android:theme="@style/subTitle_font_size"
                                android:fontFamily="@font/kaiti"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="#000000"
                        />
                        <View
                                android:id="@+id/divider3"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"/>
                        <androidx.gridlayout.widget.GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:columnCount="4"
                                android:id="@+id/sub2"

                        >
                        </androidx.gridlayout.widget.GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/MyCardViewStyle"
                >
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="@string/tx3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/cap3"
                                android:theme="@style/subTitle_font_size"
                                android:fontFamily="@font/kaiti"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="#000000"
                        />
                        <View
                                android:id="@+id/divider5"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"/>
                        <androidx.gridlayout.widget.GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:columnCount="4"
                                android:id="@+id/sub3"
                        >
                        </androidx.gridlayout.widget.GridLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/MyCardViewStyle"
                >
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                        <TextView
                                android:text="@string/tx4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/cap4"
                                android:theme="@style/subTitle_font_size"
                                android:fontFamily="@font/kaiti"
                                android:paddingTop="8dp"
                                android:paddingBottom="8dp"
                                android:textColor="#000000"
                        />
                        <View
                                android:id="@+id/divider4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="10dp"/>
                        <androidx.gridlayout.widget.GridLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:columnCount="4"
                                android:id="@+id/sub4"
                                app:alignmentMode="alignBounds"
                        />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>